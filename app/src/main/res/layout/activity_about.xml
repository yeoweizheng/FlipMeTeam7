<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
    <TextView
        android:id="@+id/howToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="How To Play"
        android:textColor="@color/ourBlack"
        android:textSize="32dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/howToPlayText"
        app:layout_constraintTop_toBottomOf="@id/howToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="1. Click on 'Start' to begin.\n2. Click on 'Fetch' to download images.\n3. Select 6 images to start playing.\n4. Flip the cards to match the identical pairs.\n5. Once completed, enter your name to be displayed on the Hall of Fame."
            android:textSize="19dp"
            app:layout_constraintTop_toBottomOf="@id/howToPlay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutUs"
        app:layout_constraintTop_toBottomOf="@id/howToPlayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Team 7 Members"
            android:textColor="@color/ourBlack"
            android:textSize="32dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutUsText"
        app:layout_constraintTop_toBottomOf="@id/aboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/aboutText1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/aboutUs">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Gao Ge\nGe Xiao Min\nHong Ziling\nMark Goh"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aboutText2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/aboutUs">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Rishika Manocha\nTommy Lapierre\nYeo Wei Zheng"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songLicense"
        app:layout_constraintTop_toBottomOf="@id/aboutUsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/songLicenseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Song License"
            android:textColor="@color/ourBlack"
            android:textSize="32dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songLicenseText"
        app:layout_constraintTop_toBottomOf="@id/songLicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="Creative Commons Attribute License:\nhttps://www.playonloop.com/2018-music-loops/star-way/#general-info\nhttps://www.playonloop.com/2018-music-loops/follow-me/#free-download"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/songLicenseText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leaderBoardBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/mainButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:backgroundTint="@color/ourGreen"
            android:text="Main Menu" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>