<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/gameTopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noAttemptsLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Attempts"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="bottom|center"
                />
            <TextView
                android:id="@+id/noAttempts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="0"
                android:textSize="24dp"
                android:textColor="@color/ourRed"
                android:fontFamily="sans-serif-black"
                android:gravity="top|center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameTimeLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Time remaining"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="bottom|center"
                />
            <TextView
                android:id="@+id/gameTimeRemaining"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="2:00"
                android:textSize="24dp"
                android:textColor="@color/ourRed"
                android:fontFamily="sans-serif-black"
                android:gravity="top|center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameBackLayout0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameTopLayout"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameBackView0"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView1"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView2"
            style="@style/backViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameBackLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameBackLayout0"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameBackView3"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView4"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView5"
            style="@style/backViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameBackLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameBackLayout1"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameBackView6"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView7"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView8"
            style="@style/backViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameBackLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameBackLayout2"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameBackView9"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView10"
            style="@style/backViewStyle"
            />
        <ImageView
            android:id="@+id/gameBackView11"
            style="@style/backViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameImageLayout0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameTopLayout"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameImageView0"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView1"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView2"
            style="@style/imageViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameImageLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameImageLayout0"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameImageView3"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView4"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView5"
            style="@style/imageViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameImageLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameImageLayout1"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameImageView6"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView7"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView8"
            style="@style/imageViewStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gameImageLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameImageLayout2"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameImageView9"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView10"
            style="@style/imageViewStyle"
            />
        <ImageView
            android:id="@+id/gameImageView11"
            style="@style/imageViewStyle"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>