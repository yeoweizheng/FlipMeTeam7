<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/defaultBtnStyle</item>
    </style>

    <style name="MainPageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:buttonStyle">@style/mainPageBtnStyle</item>
        <item name="buttonStyle">@style/mainPageBtnStyle</item>
        <item name="android:fontFamily">@res/font/handlee_regular</item>
    </style>

    <style name="mainPageBtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="android:textColor">@color/ourOrange</item>
        <item name="android:background">@drawable/red_button</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="defaultBtnStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:textColor">@color/ourWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="choosePageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/fetchBtnStyle</item>
        <item name="android:background">@drawable/background</item>
    </style>


    <style name="imageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="fetchBtnStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/green_button</item>
        <item name="android:textColor">@color/ourWhite</item>
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
